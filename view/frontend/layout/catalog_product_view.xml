<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.simple">
            <action method="setTemplate" ifconfig="mikielis_stockcallus/main/enable">
                <argument name="template" xsi:type="string">Mikielis_StockCallUs::catalog/product/view/type/default.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="product.info.virtual">
            <action method="setTemplate" ifconfig="mikielis_stockcallus/main/enable">
                <argument name="template" xsi:type="string">Mikielis_StockCallUs::catalog/product/view/type/default.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="product.info.configurable">
            <action method="setTemplate" ifconfig="mikielis_stockcallus/main/enable">
                <argument name="template" xsi:type="string">Mikielis_StockCallUs::catalog/product/view/type/default.phtml</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="product.info.grouped.stock">
            <action method="setTemplate" ifconfig="mikielis_stockcallus/main/enable">
                <argument name="template" xsi:type="string">Mikielis_StockCallUs::catalog/product/view/type/default.phtml</argument>
            </action>
        </referenceBlock>
    </body>
</page>
